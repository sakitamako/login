<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Softwere Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">

<!-- struts.xmlでは、JSPとJavaファイルの連携を設定をするファイル -->
<struts>

    <!-- このプロジェクトで使うActionファイルが保存されているパッケージを宣言 -->
    <!-- 1, Struts2の挙動を制御する設定です。name:設定名、value:設定値 をそれぞれ記述します。※この研修では毎回同じ値を使います。 -->
    <constant name="struts.devMode" value="true"/>

    <!-- 2, Actionファイルが保存されているパッケージ名を記述 -->
    <package name="com.diworksdev.login.action" extends="struts-default">

        <!-- 呼び出されるJavaクラスファイルと実行するメソッドを宣言 -->
        <!-- 3, プロジェクト内で使うActionファイルを記述 -->
        <!-- 4, パッケージ名、Actionクラス名の順で記述します。※③で呼び出されたActionクラスの場所を記述 -->
        <!-- 5, 普通はexecuteメソッドを記述します。※③で呼び出されたActionクラスのどのメソッドが呼ばれるかを記述 -->
        <action name="LoginAction" class="com.diworksdev.login.action.LoginAction" method="execute">

            <!-- execute()メソッドから返ってきた値によって、次に遷移するJSPを振り分けます。 -->
            <!-- 6, ⑤のメソッドからSUCCESSが返された場合、ここで記述したJSPファイルに遷移します -->
            <result name="success">loginSuccess.jsp</result>

            <!-- 7, ⑤のメソッドからERRORが返された場合、ここで記述したJSPファイルに遷移します。 -->
            <result name="error">loginError.jsp</result>

        </action>

    </package>

</struts>