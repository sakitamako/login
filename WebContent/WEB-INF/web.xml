<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
id="WebApp_ID" version="3.1">

    <!-- プロジェクト名を記述します。「login」と書く -->
    <display-name>login</display-name>

    <welcome-file-list>
        <!-- 一番最初に表示されるJSPファイルを設定,初期画面にしたいJSPファイル名を書く -->
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>struts2</filter-name>
        <!-- Struts2の制御担当クラス（固定） -->
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>struts2</filter-name>
        <!-- 「適用する範囲（URL)」 (固定）,「このプロジェクト配下（／）のすべてのページ（＊）」を表す -->
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 後半<filter>～<filter-mapping>は「このプロジェクト全体でstruts2を使います」という意味になることを理解できればＯＫです！ -->
    <!-- 同じ名前を入れることでclassとpatternが結びつく！ -->
</web-app>